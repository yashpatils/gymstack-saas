datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  OWNER
  USER
}

enum MembershipRole {
  OWNER
  ADMIN
  MEMBER
}

enum SubscriptionStatus {
  FREE
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
}

model User {
  id                   String               @id @default(uuid())
  email                String               @unique
  password             String
  role                 Role                 @default(USER)
  orgId                String?
  stripeCustomerId     String?              @unique
  stripeSubscriptionId String?              @unique
  subscriptionStatus   SubscriptionStatus   @default(FREE)
  organization         Organization?        @relation(fields: [orgId], references: [id], onDelete: SetNull)
  gyms                 Gym[]
  passwordResetTokens  PasswordResetToken[]
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  invites              Invite[]             @relation("InviteCreator")
  auditLogs            AuditLog[]

  @@index([orgId])
}

model AuditLog {
  id           String        @id @default(uuid())
  orgId        String?
  userId       String?
  action       String
  entityType   String
  entityId     String?
  metadata     Json?
  ip           String?
  userAgent    String?
  createdAt    DateTime      @default(now())
  organization Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull)
  user         User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([orgId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model Invite {
  id           String       @id @default(uuid())
  orgId        String
  email        String
  role         Role         @default(USER)
  tokenHash    String
  expiresAt    DateTime
  acceptedAt   DateTime?
  createdBy    String
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  creator      User         @relation("InviteCreator", fields: [createdBy], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([orgId])
  @@index([email])
  @@index([tokenHash])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  tokenHash String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Gym {
  id           String       @id @default(uuid())
  name         String
  timezone     String       @default("UTC")
  contactEmail String?
  phone        String?
  address      String?
  logoUrl      String?
  ownerId      String
  orgId        String
  owner        User         @relation(fields: [ownerId], references: [id])
  org          Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([orgId])
}

model Organization {
  id        String     @id @default(cuid())
  name      String
  users     User[]
  auditLogs AuditLog[]
  invites   Invite[]
  gyms      Gym[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}
