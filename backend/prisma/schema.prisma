datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  PLATFORM_ADMIN
  ADMIN
  OWNER
  USER
}

enum MembershipRole {
  TENANT_OWNER
  TENANT_LOCATION_ADMIN
  GYM_STAFF_COACH
  CLIENT
}

enum MembershipStatus {
  ACTIVE
  INVITED
  DISABLED
}

enum DomainStatus {
  PENDING
  VERIFYING
  ACTIVE
  ERROR
  DELETING
}


enum AuditActorType {
  SYSTEM
  USER
  ADMIN
}

enum FeatureFlagScope {
  GLOBAL
  TENANT
  LOCATION
}
enum InviteStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

enum MembershipPlanInterval {
  month
  year
  week
  day
  one_time
}

enum ClientMembershipStatus {
  active
  paused
  canceled
  trialing
  past_due
}

enum SubscriptionStatus {
  FREE
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
}


enum TenantActivationStep {
  TENANT_CREATED
  LOCATION_CREATED
  FIRST_STAFF_INVITED
  FIRST_CLIENT_ADDED
  FIRST_MEMBERSHIP_PLAN_CREATED
  FIRST_MEMBERSHIP_ASSIGNED
  FIRST_CLASS_CREATED
  FIRST_BOOKING
}

enum UserStatus {
  ACTIVE
  DELETED
}

enum AuthTokenPurpose {
  EMAIL_VERIFY
  PASSWORD_RESET
  ACCOUNT_DELETE
  OAUTH_LINK_CONFIRM
}

enum OAuthProvider {
  google
  apple
}

enum AuditActorType {
  SYSTEM
  USER
  ADMIN
}

enum FeatureFlagScope {
  GLOBAL
  TENANT
  LOCATION
}

enum ActiveMode {
  OWNER
  MANAGER
}

enum ClassSessionStatus {
  SCHEDULED
  CANCELED
}

enum ClassBookingStatus {
  BOOKED
  CANCELED
  CHECKED_IN
}

enum AuditActorType {
  USER
  ADMIN
  SYSTEM
}

enum FeatureFlagScope {
  GLOBAL
  TENANT
  LOCATION
}

model User {
  id                   String               @id @default(uuid())
  email                String               @unique
  password             String
  role                 Role                 @default(USER)
  orgId                String?
  stripeCustomerId     String?              @unique
  stripeSubscriptionId String?              @unique
  subscriptionStatus   SubscriptionStatus   @default(FREE)
  emailVerifiedAt      DateTime?
  emailVerificationTokenHash String?
  emailVerificationTokenExpiresAt DateTime?
  emailVerificationLastSentAt DateTime?
  emailVerificationSendCount Int @default(0)
  status               UserStatus           @default(ACTIVE)
  deletedAt            DateTime?
  deletionRequestedAt  DateTime?
  deletionTokenHash    String?
  deletionTokenExpiresAt DateTime?
  organization         Organization?        @relation(fields: [orgId], references: [id], onDelete: SetNull)
  memberships          Membership[]
  gyms                 Gym[]
  passwordResetTokens  PasswordResetToken[]
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  invites              Invite[]             @relation("InviteCreator")
  customDomains        CustomDomain[]
  updatedFeatureFlags   FeatureFlag[]         @relation("FeatureFlagUpdatedBy")
  adminEvents           AdminEvent[]
  locationInvites      LocationInvite[]
  consumedLocationInvites LocationInvite[] @relation("InviteConsumer")
  auditLogs            AuditLog[]            @relation("LegacyAuditUser")
  actedAuditLogs       AuditLog[]            @relation("AuditActorUser")
  notifications        Notification[]
  authTokens           AuthToken[]
  authIdentities       AuthIdentity[]
  ownerOperatorSettings OwnerOperatorSetting[]
  refreshTokens         RefreshToken[]
  clientMemberships     ClientMembership[] @relation("ClientMembershipUser")
  createdClientMemberships ClientMembership[] @relation("ClientMembershipCreator")
  coachedClasses         Class[]            @relation("ClassCoach")
  classBookings          ClassBooking[]
  pushSubscriptions      PushSubscription[]
  notificationMarkers    NotificationMarker[]
  updatedFeatureFlags    FeatureFlag[]       @relation("FeatureFlagUpdatedBy")
  adminEvents            AdminEvent[]

  @@index([orgId])
  @@index([deletedAt])
  @@index([deletionRequestedAt])
}

model RefreshToken {
  id                 String   @id @default(cuid())
  userId             String
  tokenHash          String   @unique
  expiresAt          DateTime
  revokedAt          DateTime?
  replacedByTokenHash String?
  userAgent          String?
  ipAddress          String?
  createdAt          DateTime @default(now())
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
}

model AuthIdentity {
  id              String        @id @default(cuid())
  userId          String
  provider        OAuthProvider
  providerSubject String
  email           String?
  emailVerified   Boolean       @default(false)
  displayName     String?
  avatarUrl       String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerSubject])
  @@index([userId])
}

model OwnerOperatorSetting {
  id                   String     @id @default(cuid())
  userId               String
  tenantId             String
  allowOwnerStaffLogin Boolean    @default(false)
  defaultMode          ActiveMode @default(OWNER)
  defaultLocationId    String?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  user                 User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant               Organization @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
  @@index([tenantId])
}

model AuthToken {
  id         String           @id @default(uuid())
  userId      String
  purpose     AuthTokenPurpose
  tokenHash   String
  expiresAt   DateTime
  consumedAt  DateTime?
  createdAt   DateTime         @default(now())
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@index([userId, purpose, consumedAt, expiresAt])
}

model AuditLog {
  id           String        @id @default(uuid())
  actorUserId  String?
  actorType    AuditActorType @default(SYSTEM)
  tenantId     String?
  locationId   String?
  targetType   String?
  targetId     String?
  orgId        String?
  userId       String?
  action       String
  entityType   String
  entityId     String?
  metadata     Json?
  ip           String?
  userAgent    String?
  createdAt    DateTime      @default(now())
  organization Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull)
  user         User?         @relation("LegacyAuditUser", fields: [userId], references: [id], onDelete: SetNull)
  actorUser    User?         @relation("AuditActorUser", fields: [actorUserId], references: [id], onDelete: SetNull)
  tenant       Organization? @relation("TenantAuditLogs", fields: [tenantId], references: [id], onDelete: SetNull)
  location     Gym?          @relation("GymAuditLogs", fields: [locationId], references: [id], onDelete: SetNull)

  @@index([orgId])
  @@index([userId])
  @@index([tenantId])
  @@index([locationId])
  @@index([actorUserId])
  @@index([action])
  @@index([createdAt])
}

model FeatureFlag {
  id              String           @id @default(uuid())
  key             String
  enabled         Boolean          @default(false)
  scope           FeatureFlagScope @default(GLOBAL)
  tenantId        String?
  locationId      String?
  updatedByUserId String?
  updatedAt       DateTime         @updatedAt
  createdAt       DateTime         @default(now())
  tenant          Organization?    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  location        Gym?             @relation("GymFeatureFlags", fields: [locationId], references: [id], onDelete: Cascade)
  updatedByUser   User?            @relation("FeatureFlagUpdatedBy", fields: [updatedByUserId], references: [id], onDelete: SetNull)

  @@unique([key, scope, tenantId, locationId])
  @@index([scope, key])
}

model Invite {
  id           String       @id @default(uuid())
  orgId        String
  email        String
  role         Role         @default(USER)
  tokenHash    String
  expiresAt    DateTime
  acceptedAt   DateTime?
  createdBy    String
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  creator      User         @relation("InviteCreator", fields: [createdBy], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([orgId])
  @@index([email])
  @@index([tokenHash])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  title     String
  body      String
  readAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, readAt])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  tokenHash String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Gym {
  id           String       @id @default(uuid())
  name         String
  slug         String       @unique
  timezone     String       @default("UTC")
  contactEmail String?
  phone        String?
  address      String?
  logoUrl      String?
  displayName  String?
  accentColor  String?
  primaryColor String?
  accentGradient String?
  heroTitle    String?
  heroSubtitle String?
  heroImageUrl String?
  customDomain String?      @unique
  domainVerifiedAt DateTime?
  domainVerificationToken String?
  verificationRequestedAt DateTime?
  ownerId      String
  orgId        String
  owner        User         @relation(fields: [ownerId], references: [id])
  org          Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  memberships  Membership[]
  customDomains CustomDomain[]
  auditLogs     AuditLog[]       @relation("GymAuditLogs")
  featureFlags  FeatureFlag[]    @relation("GymFeatureFlags")
  locationInvites LocationInvite[]
  membershipPlans MembershipPlan[]
  clientMemberships ClientMembership[]
  classes        Class[]
  classSessions  ClassSession[]
  classBookings  ClassBooking[]
  pushSubscriptions PushSubscription[]
  notificationMarkers NotificationMarker[]
  auditLogs      AuditLog[]
  featureFlags   FeatureFlag[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([orgId])
}

model Organization {
  id          String       @id @default(cuid())
  name        String
  isDisabled  Boolean      @default(false)
  disabledAt  DateTime?
  whiteLabelBrandingEnabled Boolean @default(false)
  whiteLabelEnabled Boolean @default(false)
  stripeCustomerId String? @unique
  stripeSubscriptionId String? @unique
  stripePriceId String?
  subscriptionStatus String?
  currentPeriodEnd DateTime?
  trialEndsAt DateTime?
  isTrialUsed Boolean @default(false)
  users       User[]
  memberships Membership[]
  auditLogs   AuditLog[]
  tenantAuditLogs AuditLog[] @relation("TenantAuditLogs")
  featureFlags FeatureFlag[]
  invites     Invite[]
  gyms        Gym[]
  customDomains CustomDomain[]
  locationInvites LocationInvite[]
  ownerOperatorSettings OwnerOperatorSetting[]
  supportTickets      SupportTicket[] @relation("SupportTicketTenant")
  adminEvents AdminEvent[]
  pushSubscriptions PushSubscription[]
  notificationMarkers NotificationMarker[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([referredByTenantId])
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  gymName   String
  size      String
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model TrialEvent {
  id        String   @id @default(cuid())
  tenantId  String
  eventType String
  createdAt DateTime @default(now())
  tenant    Organization @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt])
  @@index([eventType])
}

model ApiKey {
  id         String       @id @default(uuid())
  tenantId   String
  name       String
  keyHash    String       @unique
  lastUsedAt DateTime?
  revokedAt  DateTime?
  createdAt  DateTime     @default(now())
  tenant     Organization @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId, createdAt])
  @@index([tenantId, revokedAt])
}

model WebhookEndpoint {
  id         String            @id @default(uuid())
  tenantId   String
  url        String
  secret     String
  events     String[]
  active     Boolean           @default(true)
  createdAt  DateTime          @default(now())
  tenant     Organization      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  deliveries WebhookDelivery[]

  @@index([tenantId, active])
}

model WebhookDelivery {
  id                String          @id @default(uuid())
  webhookEndpointId String
  eventType         String
  payload           Json
  responseStatus    Int?
  responseBody      String?
  attemptCount      Int             @default(0)
  nextRetryAt       DateTime?
  createdAt         DateTime        @default(now())
  webhookEndpoint   WebhookEndpoint @relation(fields: [webhookEndpointId], references: [id], onDelete: Cascade)

  @@index([webhookEndpointId, createdAt])
  @@index([nextRetryAt])
}

model AdminEvent {
  id          String       @id @default(cuid())
  adminUserId String
  type        String
  tenantId    String?
  metadata    Json?
  ip          String?
  createdAt   DateTime     @default(now())
  adminUser   User         @relation(fields: [adminUserId], references: [id], onDelete: Cascade)
  tenant      Organization? @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  @@index([adminUserId, createdAt])
  @@index([tenantId, createdAt])
  @@index([type])
}

model Membership {
  id        String           @id @default(cuid())
  orgId     String
  userId    String
  gymId     String?
  role      MembershipRole
  status    MembershipStatus @default(ACTIVE)
  createdAt DateTime         @default(now())
  org       Organization     @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  gym       Gym?             @relation(fields: [gymId], references: [id], onDelete: SetNull)

  @@unique([userId, orgId, gymId, role])
  @@index([orgId])
  @@index([userId])
}

model CustomDomain {
  id                String       @id @default(cuid())
  tenantId          String
  locationId        String?
  hostname          String       @unique
  status            DomainStatus @default(PENDING)
  verificationToken String
  createdByUserId   String
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  tenant            Organization @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  location          Gym?         @relation(fields: [locationId], references: [id], onDelete: SetNull)
  creator           User         @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([locationId])
}

model LocationInvite {
  id              String           @id @default(uuid())
  tenantId        String
  locationId      String
  role            MembershipRole
  email           String?
  tokenHash       String           @unique
  tokenPrefix     String
  expiresAt       DateTime
  status          InviteStatus     @default(PENDING)
  consumedAt      DateTime?
  consumedByUserId String?
  revokedAt       DateTime?
  createdByUserId String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  tenant          Organization     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  location        Gym              @relation(fields: [locationId], references: [id], onDelete: Cascade)
  creator         User             @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)
  consumer        User?            @relation("InviteConsumer", fields: [consumedByUserId], references: [id], onDelete: SetNull)

  @@index([tenantId])
  @@index([locationId])
  @@index([createdByUserId])
  @@index([tenantId, locationId, status])
  @@index([tenantId, locationId])
  @@index([role, consumedAt])
  @@index([tokenPrefix])
}

model MembershipPlan {
  id          String                 @id @default(uuid())
  locationId  String
  name        String
  description String?
  priceCents  Int?
  interval    MembershipPlanInterval
  isActive    Boolean                @default(true)
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
  location    Gym                    @relation(fields: [locationId], references: [id], onDelete: Cascade)
  memberships ClientMembership[]

  @@index([locationId, isActive])
}

model ClientMembership {
  id              String                 @id @default(uuid())
  userId          String
  locationId      String
  planId          String?
  status          ClientMembershipStatus
  startAt         DateTime
  endAt           DateTime?
  canceledAt      DateTime?
  createdByUserId String
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  user            User                   @relation("ClientMembershipUser", fields: [userId], references: [id], onDelete: Cascade)
  location        Gym                    @relation(fields: [locationId], references: [id], onDelete: Cascade)
  plan            MembershipPlan?        @relation(fields: [planId], references: [id], onDelete: SetNull)
  createdBy       User                   @relation("ClientMembershipCreator", fields: [createdByUserId], references: [id], onDelete: Restrict)

  @@index([locationId, userId])
  @@index([locationId, status])
  @@index([planId])
  @@index([createdByUserId])
}

enum InsightSeverity {
  info
  warning
  critical
}

model DailyLocationMetrics {
  id                    String   @id @default(uuid())
  tenantId              String
  locationId            String
  date                  DateTime @db.Date
  checkinsCount         Int
  bookingsCount         Int
  uniqueClientsCount    Int
  newClientsCount       Int
  canceledBookingsCount Int
  createdAt             DateTime @default(now())

  @@unique([locationId, date])
  @@index([tenantId, date])
}

model DailyMembershipMetrics {
  id                  String   @id @default(uuid())
  tenantId            String
  locationId          String
  date                DateTime @db.Date
  activeMemberships   Int
  canceledMemberships Int
  newMemberships      Int
  createdAt           DateTime @default(now())

  @@unique([locationId, date])
  @@index([tenantId, date])
}

model InsightLog {
  id          String   @id @default(uuid())
  tenantId    String
  locationId  String?
  insightType String
  payload     Json
  createdAt   DateTime @default(now())

  @@index([tenantId, createdAt])
  @@index([locationId, createdAt])
}
