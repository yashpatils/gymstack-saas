datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String
  passwordHash String
  tenantId     String
  role         String   @default("member")
  gyms         Gym[]
  createdAt    DateTime @default(now())

  @@unique([email, tenantId])
}

model Gym {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
}
