datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  PLATFORM_ADMIN
  ADMIN
  OWNER
  USER
}

enum MembershipRole {
  TENANT_OWNER
  TENANT_LOCATION_ADMIN
  GYM_STAFF_COACH
  CLIENT
}

enum MembershipStatus {
  ACTIVE
  INVITED
  DISABLED
}

enum DomainStatus {
  PENDING
  VERIFYING
  ACTIVE
  ERROR
  DELETING
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

enum SubscriptionStatus {
  FREE
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
}

enum UserStatus {
  ACTIVE
  DELETED
}

enum AuthTokenPurpose {
  EMAIL_VERIFY
  PASSWORD_RESET
  ACCOUNT_DELETE
  OAUTH_LINK_CONFIRM
}

enum OAuthProvider {
  google
  apple
}

enum ActiveMode {
  OWNER
  MANAGER
}

model User {
  id                   String               @id @default(uuid())
  email                String               @unique
  password             String
  role                 Role                 @default(USER)
  orgId                String?
  stripeCustomerId     String?              @unique
  stripeSubscriptionId String?              @unique
  subscriptionStatus   SubscriptionStatus   @default(FREE)
  emailVerifiedAt      DateTime?
  status               UserStatus           @default(ACTIVE)
  organization         Organization?        @relation(fields: [orgId], references: [id], onDelete: SetNull)
  memberships          Membership[]
  gyms                 Gym[]
  passwordResetTokens  PasswordResetToken[]
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  invites              Invite[]             @relation("InviteCreator")
  customDomains        CustomDomain[]
  locationInvites      LocationInvite[]
  auditLogs            AuditLog[]
  notifications        Notification[]
  authTokens           AuthToken[]
  authIdentities       AuthIdentity[]
  ownerOperatorSettings OwnerOperatorSetting[]
  refreshTokens         RefreshToken[]

  @@index([orgId])
}

model RefreshToken {
  id                 String   @id @default(cuid())
  userId             String
  tokenHash          String   @unique
  expiresAt          DateTime
  revokedAt          DateTime?
  replacedByTokenHash String?
  userAgent          String?
  ipAddress          String?
  createdAt          DateTime @default(now())
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
}

model AuthIdentity {
  id              String        @id @default(cuid())
  userId          String
  provider        OAuthProvider
  providerSubject String
  email           String?
  emailVerified   Boolean       @default(false)
  displayName     String?
  avatarUrl       String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerSubject])
  @@index([userId])
}

model OwnerOperatorSetting {
  id                   String     @id @default(cuid())
  userId               String
  tenantId             String
  allowOwnerStaffLogin Boolean    @default(false)
  defaultMode          ActiveMode @default(OWNER)
  defaultLocationId    String?
  createdAt            DateTime   @default(now())
  updatedAt            DateTime   @updatedAt
  user                 User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant               Organization @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([userId, tenantId])
  @@index([tenantId])
}

model AuthToken {
  id         String           @id @default(uuid())
  userId      String
  purpose     AuthTokenPurpose
  tokenHash   String
  expiresAt   DateTime
  consumedAt  DateTime?
  createdAt   DateTime         @default(now())
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@index([userId, purpose, consumedAt, expiresAt])
}

model AuditLog {
  id           String        @id @default(uuid())
  orgId        String?
  userId       String?
  action       String
  entityType   String
  entityId     String?
  metadata     Json?
  ip           String?
  userAgent    String?
  createdAt    DateTime      @default(now())
  organization Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull)
  user         User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([orgId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model Invite {
  id           String       @id @default(uuid())
  orgId        String
  email        String
  role         Role         @default(USER)
  tokenHash    String
  expiresAt    DateTime
  acceptedAt   DateTime?
  createdBy    String
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  creator      User         @relation("InviteCreator", fields: [createdBy], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([orgId])
  @@index([email])
  @@index([tokenHash])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  title     String
  body      String
  readAt    DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, readAt])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  tokenHash String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Gym {
  id           String       @id @default(uuid())
  name         String
  slug         String       @unique
  timezone     String       @default("UTC")
  contactEmail String?
  phone        String?
  address      String?
  logoUrl      String?
  displayName  String?
  accentColor  String?
  heroImageUrl String?
  ownerId      String
  orgId        String
  owner        User         @relation(fields: [ownerId], references: [id])
  org          Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  memberships  Membership[]
  customDomains CustomDomain[]
  locationInvites LocationInvite[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([orgId])
}

model Organization {
  id          String       @id @default(cuid())
  name        String
  users       User[]
  memberships Membership[]
  auditLogs   AuditLog[]
  invites     Invite[]
  gyms        Gym[]
  customDomains CustomDomain[]
  locationInvites LocationInvite[]
  ownerOperatorSettings OwnerOperatorSetting[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Membership {
  id        String           @id @default(cuid())
  orgId     String
  userId    String
  gymId     String?
  role      MembershipRole
  status    MembershipStatus @default(ACTIVE)
  createdAt DateTime         @default(now())
  org       Organization     @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  gym       Gym?             @relation(fields: [gymId], references: [id], onDelete: SetNull)

  @@unique([userId, orgId, gymId, role])
  @@index([orgId])
  @@index([userId])
}

model CustomDomain {
  id                String       @id @default(cuid())
  tenantId          String
  locationId        String?
  hostname          String       @unique
  status            DomainStatus @default(PENDING)
  verificationToken String
  createdByUserId   String
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  tenant            Organization @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  location          Gym?         @relation(fields: [locationId], references: [id], onDelete: SetNull)
  creator           User         @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([locationId])
}

model LocationInvite {
  id              String           @id @default(cuid())
  tenantId        String
  locationId      String
  role            MembershipRole
  email           String?
  tokenHash       String           @unique
  expiresAt       DateTime
  status          InviteStatus     @default(PENDING)
  consumedAt      DateTime?
  createdByUserId String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  tenant          Organization     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  location        Gym              @relation(fields: [locationId], references: [id], onDelete: Cascade)
  creator         User             @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([locationId])
  @@index([createdByUserId])
}
