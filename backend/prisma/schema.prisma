datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  OWNER
  USER
}

enum SubscriptionStatus {
  INACTIVE
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
  INCOMPLETE
}

model User {
  id                   String              @id @default(uuid())
  email                String              @unique
  password             String
  role                 Role                @default(USER)
  orgId                String?
  stripeCustomerId     String?             @unique
  stripeSubscriptionId String?             @unique
  subscriptionStatus   SubscriptionStatus?
  gyms                 Gym[]
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt
  invites              Invite[]            @relation("InviteCreator")

  @@index([orgId])
}

model Invite {
  id         String    @id @default(uuid())
  orgId      String
  email      String
  role       Role      @default(USER)
  tokenHash  String
  expiresAt  DateTime
  acceptedAt DateTime?
  createdBy  String
  creator    User      @relation("InviteCreator", fields: [createdBy], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([orgId])
  @@index([email])
  @@index([tokenHash])
}

model Gym {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
